        <!-- Main Content Area -->
        <div class="flex-1 p-8">
            <h2 class="text-3xl font-semibold mb-6">Dashboard</h2>

            <!-- Inventory Section -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mb-8">
                <div class="card bg-white shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Mushrooms Inventory</h3>
                    <p class="text-gray-600">Track species, quantity, and growth stages.</p>
                    <a href="/inventory/mushrooms" class="text-blue-500 mt-4 inline-block">View Inventory</a>
                </div>

                <div class="card bg-white shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Harvest Inventory</h3>
                    <p class="text-gray-600">Keep track of recent harvests.</p>
                    <a href="/inventory/harvest" class="text-blue-500 mt-4 inline-block">View Harvest Log</a>
                </div>

                <div class="card bg-white shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Genetic Inventory</h3>
                    <p class="text-gray-600">Log different genetic strains, spore syringes, and agar slants.</p>
                    <a href="/inventory/genetics" class="text-blue-500 mt-4 inline-block">View Genetic Inventory</a>
                </div>
            </div>

            <!-- Equipment Section -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mb-8">
                <div class="card bg-white shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Lab Equipment</h3>
                    <p class="text-gray-600">Document equipment like flow hoods, incubators, etc.</p>
                    <a href="/equipment" class="text-blue-500 mt-4 inline-block">View Equipment Status</a>
                </div>

                <div class="card bg-white shadow-md rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-4">Equipment Repairs</h3>
                    <p class="text-gray-600">Track equipment maintenance and repairs.</p>
                    <a href="/equipment/repairs" class="text-blue-500 mt-4 inline-block">View Repairs Log</a>
                </div>
            </div>

            <!-- Grow Log Section -->
            <div class="card bg-white shadow-md rounded-lg p-6 mb-8">
                <h3 class="text-xl font-semibold mb-4">Grow Log</h3>
                <p class="text-gray-600">Log your work and experiments in the lab.</p>
                <a href="/grow-log/new" class="text-blue-500 mt-4 inline-block">Add New Log Entry</a>
            </div>
        </div>
