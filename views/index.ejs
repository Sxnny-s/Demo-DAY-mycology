<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Mycology Dashboard</title>
</head>
<body class="bg-gray-900 text-gray-200">

    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 text-white h-screen p-4">
            <h1 class="text-2xl font-semibold mb-8">Mycology Lab</h1>
            <ul>
                <li class="mb-4">
                    <a href="/" class="text-lg text-green-300">Home</a>
                </li>
                <li class="mb-4">
                    <a href="/inventory" class="text-lg hover:text-green-300">Inventory</a>
                </li>
                <li class="mb-4">
                    <a href="/grow-log" class="text-lg hover:text-green-300">Grow Log</a>
                </li>
                <li class="mb-4">
                    <a href="/inventory/equipment" class="text-lg hover:text-green-300">Lab Equipment</a>
                </li>
            </ul>
        </div> 

        <!-- Main Content Area -->
        <div class="flex-1 p-8">
            <h2 class="text-3xl font-semibold mb-6 text-green-300">Dashboard</h2>

            <!-- Overview Section -->
            <div class="bg-gray-800 rounded-lg p-6 mb-6 shadow-lg">
                <h3 class="text-xl font-semibold text-green-300 mb-4">Overview</h3>
                <div class="grid grid-cols-2 gap-6">
                    <div class="p-6 bg-gray-700 rounded-lg text-center">
                        <h4 class="text-lg font-semibold text-gray-400">Total Grows</h4>
                        <p class="text-4xl font-extrabold">15</p>
                    </div>
                    <div class="p-6 bg-gray-700 rounded-lg text-center">
                        <h4 class="text-lg font-semibold text-gray-400">Active Grows</h4>
                        <p class="text-4xl font-extrabold">8</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Section -->
            <div class="bg-gray-800 rounded-lg p-6 mb-6 shadow-lg">
                <h3 class="text-xl font-semibold text-green-300 mb-4">Quick Actions</h3>
                <div class="flex space-x-6">
                    <a href="/inventory/equipment/new" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">+ New Equipment</a>
                    <a href="/inventory/genetic-inventory/new" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">+ New Genetic</a>
                    <a href="/grow-log/new" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">+ Start Grow</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
