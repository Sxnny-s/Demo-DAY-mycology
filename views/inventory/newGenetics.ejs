<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Genetic Item</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-200">

    <div class="container mx-auto p-6">
        <h2 class="text-2xl font-semibold mb-6 text-green-300">Add New Genetic Item</h2>

        <!-- Form to add a new genetic item -->
        <form action="/inventory/genetic-inventory" method="POST" class="bg-gray-800 p-6 rounded-lg shadow-lg">

            <!-- Type Selection -->
            <div class="mb-4">
                <label for="type" class="block text-gray-400 font-semibold">Type</label>
                <select name="type" id="type" class="mt-2 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 focus:bg-gray-600 text-gray-200 transition" required>
                    <option value="spore print">Spore Print</option>
                    <option value="spore syringe">Spore Syringe</option>
                    <option value="liquid culture">Liquid Culture</option>
                    <option value="agar plate">Agar Plate</option>
                    <option value="agar slant">Agar Slant</option>
                </select>
            </div>

            <!-- Species Input -->
            <div class="mb-4">
                <label for="species" class="block text-gray-400 font-semibold">Species</label>
                <input type="text" name="species" id="species" class="mt-2 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 focus:bg-gray-600 text-gray-200 transition" required>
            </div>

            <!-- Strain Input -->
            <div class="mb-4">
                <label for="strain" class="block text-gray-400 font-semibold">Strain</label>
                <input type="text" name="strain" id="strain" class="mt-2 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 focus:bg-gray-600 text-gray-200 transition" required>
            </div>

            <!-- Isolation Input -->
            <div class="mb-4">
                <label for="isolation" class="block text-gray-400 font-semibold">Isolation (optional)</label>
                <input value="N/A" type="text" name="isolation" id="isolation" class="mt-2 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 focus:bg-gray-600 text-gray-200 transition">
            </div>

            <!-- Quantity Input -->
            <div class="mb-4">
                <label for="quantity" class="block text-gray-400 font-semibold">Quantity</label>
                <input type="number" name="quantity" id="quantity" class="mt-2 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-500 focus:bg-gray-600 text-gray-200 transition" min="1" required>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition duration-300">Add Genetic Item</button>
            </div>

        </form>
    </div>

</body>
</html>
